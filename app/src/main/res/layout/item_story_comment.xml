<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/item_story_comment_avatar_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/selector_light_oval">

                <ImageView
                    android:id="@+id/item_story_comment_avatar"
                    android:layout_width="54dp"
                    android:layout_height="54dp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_story_comment_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:textColor="@color/text_gray_dark"
                    android:textSize="18sp" />

                <tr.bcxip.hummingbird.widget.RelativeTimeTextView
                    android:id="@+id/item_story_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="comment time"
                    android:textColor="@color/text_gray" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/item_story_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:text="Comment text"
            android:textColor="@color/text_gray"
            android:textSize="18sp" />

        <View
            android:id="@+id/item_story_comment_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/divider"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/item_story_comment_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone" />
    </LinearLayout>
</android.support.v7.widget.CardView>