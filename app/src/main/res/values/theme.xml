<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:actionModeBackground">@color/apptheme_primary</item>
        <item name="colorPrimary">@color/apptheme_primary</item>
        <item name="android:colorPrimary">@color/apptheme_primary</item>
        <item name="colorPrimaryDark">@color/apptheme_primary_dark</item>
        <item name="android:colorPrimaryDark">@color/apptheme_primary_dark</item>
        <item name="colorAccent">@color/apptheme_primary</item>
        <item name="android:colorAccent">@color/apptheme_primary</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme_DetailsActivity" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme_FeedAnimeDetailsActivity" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme_Login" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:homeAsUpIndicator">@android:color/transparent</item>
    </style>

</resources>
